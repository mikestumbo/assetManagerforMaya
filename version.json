{
    "plugin_name": "assetManager",
    "version": "1.2.0",
    "maya_version": "2025.3",
    "python_version": "3.9+",
    "author": "Mike Stumbo",
    "description": "A comprehensive asset management system for Maya 2025.3 with guaranteed visible background colors and professional multi-select functionality",
    "release_date": "2025-08-18",
    "requirements": [
        "Maya 2025.3+",
        "Python 3.9+",
        "PySide6",
        "Shiboken6"
    ],
    "supported_formats": [
        ".ma (Maya ASCII)",
        ".mb (Maya Binary)",
        ".obj (Wavefront OBJ)",
        ".fbx (Autodesk FBX)"
    ],
    "features": [
        "Project management",
        "Asset library browsing",
        "Search and filtering",
        "Import/Export functionality", 
        "Modern PySide6 UI",
        "Maya menu integration",
        "Asset type color-coding",
        "Collection visibility",
        "Enhanced context menus",
        "Asset thumbnail generation",
        "Asset metadata storage",
        "Thumbnail cache management",
        "Threaded operations for responsiveness",
        "Collection tabs interface",
        "Interactive collection management",
        "Tabbed asset library organization",
        "Check for updates system"
    ],
